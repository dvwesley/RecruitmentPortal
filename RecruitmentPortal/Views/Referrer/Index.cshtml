@model IEnumerable<RecruitmentPortal.Models.Referrer>
@{
    ViewBag.Title = "Referrer List";
}
<br />
<div class="row">
    <div class="col-md-10 col-xs-7">
        <h4>@ViewBag.Title</h4>
    </div>
    <div class="col-md-2 col-xs-5 text-right">
        @Html.ActionLink("Create New", "Create", "Referrer", null, new { @class = "btn btn-sm btn-default" })
    </div>
</div>
<div class="table-responsive">
    @using (Html.Bootstrap().Begin(new Table().Id("ListTable").Bordered().Condensed().Hover()))
    {
         <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.FirstName)</th>
                <th>@Html.DisplayNameFor(model => model.MiddleInitial)</th>
                <th>@Html.DisplayNameFor(model => model.LastName)</th>                                
                <th>@Html.DisplayNameFor(model => model.Email)</th>
                <th>@Html.DisplayNameFor(model => model.PhoneNo)</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.FirstName)</td>
                    <td>@Html.DisplayFor(modelItem => item.MiddleInitial)</td>
                    <td>@Html.DisplayFor(modelItem => item.LastName)</td>
                    <td>@Html.DisplayFor(modelItem => item.Email)</td>
                    <td>@Html.DisplayFor(modelItem => item.PhoneNo)</td>                                                                                
                    <td>@Html.ActionLink("Edit", "Edit/" + @item.ReferrerId, "Referrer") | @Html.ActionLink("Delete", "Delete/" + @item.ReferrerId, "Referrer")</td>
                </tr>
            }
        </tbody>       
    }
</div>
@section Scripts {
    @Scripts.Render("~/bundles/list/js")
}