@model IEnumerable<RecruitmentPortal.Models.RecruiterViewModel>
@{
    ViewBag.Title = "Recruiter List";
}
<br />
<div class="row">
    <div class="col-md-10 col-xs-7">
        <h4>@ViewBag.Title</h4>
    </div>
    <div class="col-md-2 col-xs-5 text-right">
        @Html.ActionLink("Create New", "Create", "Recruiter", null, new { @class = "btn btn-sm btn-default" })
    </div>
</div>
<div class="table-responsive">
    @using (Html.Bootstrap().Begin(new Table().Id("ListTable").Bordered().Condensed().Hover()))
    {
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Name)</th>
                <th>@Html.DisplayNameFor(model => model.Specialty)</th>
                <th>@Html.DisplayNameFor(model => model.Communities)</th>
                <th>@Html.DisplayNameFor(model => model.Email)</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.Specialty)</td>
                    <td>@Html.DisplayFor(modelItem => item.Communities)</td>
                    <td>@Html.DisplayFor(modelItem => item.Email)</td>
                    <td>@Html.ActionLink("Target", "Index", "RecruiterTarget", new { recruiterId = item.RecruiterId }, null) | @Html.ActionLink("Edit", "Edit/" + item.RecruiterId) | @Html.ActionLink("Delete", "Delete/" + item.RecruiterId)</td>
                </tr>
            }
        </tbody>
    }
</div>
@section Scripts {
    @Scripts.Render("~/bundles/list/js")
}