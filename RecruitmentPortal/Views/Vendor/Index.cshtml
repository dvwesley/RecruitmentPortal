@model IEnumerable<RecruitmentPortal.Models.Vendor>
@{
    ViewBag.Title = "Vendor List";
}
<br />
<div class="row">
    <div class="col-md-10 col-xs-7">
        <h4>@ViewBag.Title</h4>
    </div>
    <div class="col-md-2 col-xs-5 text-right">
        @Html.ActionLink("Create New", "Create", "Vendor", null, new { @class = "btn btn-sm btn-default" })
    </div>
</div>
<div class="table-responsive">
    @using (Html.Bootstrap().Begin(new Table().Id("ListTable").Bordered().Condensed().Hover()))
    {
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Name)</th>
                <th>@Html.DisplayNameFor(model => model.PhoneNo)</th>                                
                <th>@Html.DisplayNameFor(model => model.BillingContact)</th>
                <th>@Html.DisplayNameFor(model => model.Terms)</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.PhoneNo)</td>                                        
                    <td>@Html.DisplayFor(modelItem => item.BillingContact)</td>
                    <td>@Html.DisplayFor(modelItem => item.Terms)</td>
                    <td>@Html.ActionLink("Edit", "Edit/" + @item.VendorId, "Vendor") | @Html.ActionLink("Delete", "Delete/" + @item.VendorId, "Vendor") | @Html.ActionLink("Documents", "Index", "VendorDocument", new { vendorId = item.VendorId }, null)</td>
                </tr>
            }
        </tbody>
    }
</div>
@section Scripts {
    @Scripts.Render("~/bundles/list/js")
}