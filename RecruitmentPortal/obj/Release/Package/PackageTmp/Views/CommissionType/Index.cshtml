@model IEnumerable<RecruitmentPortal.Models.CommissionType>
@{
    ViewBag.Title = "Commission Type List";
}
<br />
<div class="row">
    <div class="col-md-10 col-xs-7">
        <h4>@ViewBag.Title</h4>
    </div>
    <div class="col-md-2 col-xs-5 text-right">
        @Html.ActionLink("Create New", "Create", "CommissionType", null, new { @class = "btn btn-sm btn-default" })
    </div>
</div>
<div class="table-responsive">
    @using (Html.Bootstrap().Begin(new Table().Id("ListTable").Bordered().Condensed().Hover()))
    {
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Name)</th>
                <th>@Html.DisplayNameFor(model => model.Value)</th>
                <th>@Html.DisplayNameFor(model => model.IsPercentage)</th>                
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.Value)</td>
                    <td>@Html.DisplayFor(modelItem => item.IsPercentDisplay)</td>                    
                    <td>@Html.ActionLink("Edit", "Edit/" + @item.CommissionTypeId, "CommissionType") | @Html.ActionLink("Delete", "Delete/" + @item.CommissionTypeId, "CommissionType")</td>
                </tr>
            }
        </tbody>
    }
</div>
@section Scripts {
    @Scripts.Render("~/bundles/list/js")
}