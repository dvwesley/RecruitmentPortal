@model RecruitmentPortal.Models.CommissionType
@{
    ViewBag.Title = "Delete Commission Type";
}
<br />
<div class="row">
    <div class="col-md-10 col-xs-7">
        <h4>Delete this Client?</h4>
    </div>
    <div class="col-md-2 col-xs-5 text-right">
        @Html.ActionLink("Back to List", "Index", "CommissionType", null, new { @class = "btn btn-sm btn-default" })
    </div>
</div>
<hr />
@using (var f = Html.Bootstrap().Begin(new Form()))
{
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-md-4 col-sm-6 col-xs-12">
            @f.FormGroup().DisplayFor(model => model.Name)
            @f.FormGroup().DisplayFor(model => model.Value)
            @f.FormGroup().DisplayFor(model => model.IsPercentage)            
        </div>        
    </div>
    @Html.Bootstrap().SubmitButton().Text("Delete").Class("btn btn-sm btn-default")
}
