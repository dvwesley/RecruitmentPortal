@model RecruitmentPortal.Models.DocumentType
@{
    ViewBag.Title = "Edit a Document Type";
}
<br />
<div class="row">
    <div class="col-md-10 col-xs-7">
        <h4>@ViewBag.Title.</h4>
    </div>
    <div class="col-md-2 col-xs-5 text-right">
        @Html.ActionLink("Back to List", "Index", "DocumentType", null, new { @class = "btn btn-sm btn-default" })
    </div>
</div>
<hr />
@using (var f = Html.Bootstrap().Begin(new Form()))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.DocumentTypeId)
    <div class="row">
        <div class="col-md-4 col-sm-6 col-xs-12">
            @f.FormGroup().TextBoxFor(model => model.Name)
            @f.FormGroup().DropDownListFor(model => model.DocumentGroup, (IEnumerable<SelectListItem>)ViewBag.DocumentGroups)
        </div>
    </div>
    @Html.Bootstrap().SubmitButton().Id("btnSubmit").Class("btn btn-sm btn-default")
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
