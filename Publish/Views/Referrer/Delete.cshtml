@model RecruitmentPortal.Models.Referrer
@{
    ViewBag.Title = "Delete Referrer";
}
<div class="row">
    <div class="col-md-10 col-xs-7">
        <h4>Delete this Referrer?</h4>
    </div>
    <div class="col-md-2 col-xs-5 text-right">
        @Html.ActionLink("Back to List", "Index", "Referrer", null, new { @class = "btn btn-sm btn-default" })
    </div>
</div>
<hr />
@using (var f = Html.Bootstrap().Begin(new Form()))
{
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-md-4 col-sm-6 col-xs-12">
            @f.FormGroup().DisplayFor(model => model.FirstName)
            @f.FormGroup().DisplayFor(model => model.MiddleInitial)
            @f.FormGroup().DisplayFor(model => model.LastName)
            @f.FormGroup().DisplayFor(model => model.Email)
            @f.FormGroup().DisplayFor(model => model.PhoneNo)            
        </div>        
    </div>
    @Html.Bootstrap().SubmitButton().Text("Delete").Class("btn btn-sm btn-default")
}
