@model IEnumerable<RecruitmentPortal.Models.InterviewerViewModel>
@{
    ViewBag.Title = "Interviewer List";
}
<br />
<div class="row">
    <div class="col-md-10 col-xs-7">
        <h4>@ViewBag.Title</h4>
    </div>
    <div class="col-md-2 col-xs-5 text-right">
        @Html.ActionLink("Create New", "Create", "Interviewer", null, new { @class = "btn btn-sm btn-default" })
    </div>
</div>
<div class="table-responsive">
    @using (Html.Bootstrap().Begin(new Table().Id("ListTable").Bordered().Condensed().Hover()))
    {
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Name)</th>
                <th>@Html.DisplayNameFor(model => model.Availability)</th>                
                <th>@Html.DisplayNameFor(model => model.HourlyRate)</th>
                <th>@Html.DisplayNameFor(model => model.FixedFee)</th>
                <th>@Html.DisplayNameFor(model => model.PhoneNo)</th>
                <th>Email</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.Availability)</td>                    
                    <td>@Html.DisplayFor(modelItem => item.HourlyRate)</td>
                    <td>@Html.DisplayFor(modelItem => item.FixedFee)</td>
                    <td>@Html.DisplayFor(modelItem => item.PhoneNo)</td>
                    <td>@Html.DisplayFor(modelItem => item.Email)</td>
                    <td>@Html.ActionLink("Edit", "Edit/" + @item.InterviewerId, "Interviewer") | @Html.ActionLink("Delete", "Delete/" + @item.InterviewerId, "Interviewer")</td>
                </tr>
            }
        </tbody>
    }
</div>
@section Scripts {
    @Scripts.Render("~/bundles/list/js")
}
