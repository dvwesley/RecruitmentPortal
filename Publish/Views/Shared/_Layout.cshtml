<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Recruitment Portal</title>
    @Styles.Render("~/Content/css")    
    <link title="bootstrap-theme" href="~/Content/themes/@HttpContext.Current.Application["Theme"].ToString()" rel="stylesheet" type="text/css" />
    @Styles.Render("~/Content/datatables/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jquerymask")
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Recruiter's Dream", "About", "Home", null, new { @class = "navbar-brand" })                
            </div>
            <div class="navbar-collapse collapse">                                
                <ul class="nav navbar-nav">
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">Themes <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a class="theme-link" datatheme="Slate" href="#">Night</a></li>
                            <li><a class="theme-link" datatheme="Ubuntu" href="#">Day</a></li>
                        </ul>
                    </li>
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>                    
                    @if (Request.IsAuthenticated)
                    {
                        <li>@Html.ActionLink("Consultants", "Index", "Resource")</li>
                        <li>@Html.ActionLink("Interview", "Index", "Interview")</li>                                            
                        <li>@Html.ActionLink("Requirement", "Index", "Requirement")</li>                                                  
                        <li class="dropdown">
                            <a class="dropdown-toggle" data-toggle="dropdown" href="#">Settings <span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Client", "Index", "Client")</li>
                                <li>@Html.ActionLink("Commission", "Index", "CommissionType")</li>
                                <li>@Html.ActionLink("Document Type", "Index", "DocumentType")</li>
                                <li>@Html.ActionLink("Interviewer", "Index", "Interviewer")</li>
                                <li>@Html.ActionLink("Recruiter", "Index", "Recruiter")</li>
                                <li>@Html.ActionLink("Referrer", "Index", "Referrer")</li>  
                                <li>@Html.ActionLink("Skill Set", "Index", "SkillSet")</li> 
                                <li>@Html.ActionLink("Vendor", "Index", "Vendor")</li> 
                            </ul>
                        </li>
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - SwitchLane, All Rights Reserved.</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/datatables")    
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/recruitmentportal")
    @Html.Partial("_ServerRootPath")
    @RenderSection("scripts", required: false)
</body>
</html>
